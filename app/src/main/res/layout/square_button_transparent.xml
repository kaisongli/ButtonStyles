<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#3C3C3B"
    android:paddingBottom="10dp"
    >

    <com.yixingu.buttonstyles.declarebtn.GooglePlusButton
        android:layout_width="75dp"
        android:id="@+id/google"
        app:transparentBackground="true"
        android:textAlignment="center"
        app:iconSize="30dp"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:layout_height="75dp"
        >

    </com.yixingu.buttonstyles.declarebtn.GooglePlusButton>

    <com.yixingu.buttonstyles.declarebtn.FacebookButton
        android:layout_width="75dp"
        android:id="@+id/facebook"
        android:layout_weight="1"
        app:iconSize="30dp"
        android:layout_margin="4dp"
        app:transparentBackground="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/google"
        android:layout_toRightOf="@+id/google"
        android:layout_height="75dp"
        >

    </com.yixingu.buttonstyles.declarebtn.FacebookButton>

    <com.yixingu.buttonstyles.declarebtn.TwitterButton
        android:id="@+id/twitter"
        android:layout_width="75dp"
        app:iconSize="30dp"
        android:layout_margin="4dp"
        app:transparentBackground="true"
        android:layout_alignParentBottom="true"
        android:layout_height="75dp"
        android:layout_toEndOf="@+id/facebook"
        android:layout_toRightOf="@+id/facebook"
        />

    <com.yixingu.buttonstyles.declarebtn.LinkedInButton
        android:id="@+id/linkedin"
        android:layout_width="75dp"
        app:iconSize="30dp"
        android:layout_margin="4dp"
        app:transparentBackground="true"
        android:layout_alignParentBottom="true"
        android:layout_height="75dp"
        android:layout_toEndOf="@+id/twitter"
        android:layout_toRightOf="@+id/twitter"/>

</RelativeLayout>